<Page x:Class="Klinfild.Views.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Klinfild.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="780" d:DesignWidth="1300"
      Title="StartPage">

    <StackPanel Width="900">
        <Image Source="/Resources/Background2.png" Opacity="0.5"/>
        <Border Background="#FFF7E8E2">
            <StackPanel Margin="20">
                <TextBlock Text="КОГДА ВЫ ВХОДИТЕ В НАШИ ЗНАМЕНИТЫЕ ДВЕРИ В НЬЮ-ЙОРКЕ, МЫ ПРИВЕТСТВУЕМ 
                    ВАС В НАШЕМ ДОМЕ И В СЕМЬЕ КЛЯЙНФЕЛЬД. В ЦЕНТРЕ НАШЕГО ВНИМАНИЯ - ВАШЕ 
                    ВИДЕНИЕ, И МЫ СТРЕМИМСЯ СДЕЛАТЬ КАЖДЫЙ ОПЫТ УНИКАЛЬНЫМ ДЛЯ ВАС." 
                    TextWrapping="Wrap" Width="700" FontSize="20" TextAlignment="Center"/>
                <Border Height="20"/>
                <Button Name="BookOrderBtn" Content="ЗАБРОНИРОВАТЬ ЗАКАЗ ПОКУПАТЕЛЯ" Width="500" Click="BookOrderBtn_Click"/>
            </StackPanel>
        </Border>
    </StackPanel>
</Page>
